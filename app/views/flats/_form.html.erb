<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= simple_form_for(@flat) do |f| %>
      <%= f.input :location %>
      <%= f.input :description %>
      <%= f.input :price %>

      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Create", class: "btn btn-primary btn-lg btn-block" %>
      <% end %>
    </div>
  </div>
</div>
