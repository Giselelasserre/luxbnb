<%= render "shared/banner" %>
<%#= render "form" %>
<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-sm-12">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),  url('<%#= cl_image_path homestyle.picture, height: 300, width: 400, crop: :fill %>')">
        <!-- <div class="card-description"> -->

          <!-- <div class="card-block"> -->
          <div class="card-body other">
            <h4><%= flat.description %></h4>
            <h5><%= flat.title %></h5>

          </div>
          <p><%= link_to "See more details" , flat_path(flat) %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>



<!-- coordinate display -->
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var coord = <%= raw @flats.to_json %>;
    });
  <% end %>
<% end %>




<div id="map" style="width: 100%; height: 200px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>

